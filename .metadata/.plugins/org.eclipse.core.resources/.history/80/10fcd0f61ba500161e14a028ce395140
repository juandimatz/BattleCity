package Unidades;

import javax.swing.Icon;
import javax.swing.ImageIcon;

public class NivelUno extends Nivel{
	public NivelUno(){
		GolpesResis=1;
		VelMovimiento=10;
		VelDisparo=1;
		DispSim=1; 
		ColeccionDeImagenes=new ImageIcon[4];
		ColeccionDeImagenes[0]=  new ImageIcon(this.getClass().getResource("/Recursos/JugadorU.gif"));
		ColeccionDeImagenes[1]=  new ImageIcon(this.getClass().getResource("/Recursos/JugadorD.gif"));
		ColeccionDeImagenes[2]=  new ImageIcon(this.getClass().getResource("/Recursos/JugadorL.gif"));
		ColeccionDeImagenes[3]=  new ImageIcon(this.getClass().getResource("/Recursos/JugadorR.gif"));
		
	}
		public int getGolpesResis()
		{
			return GolpesResis;
		}
		
		public int getVelMovimiento()
		{
			return VelMovimiento;
		}
		
		public int getVelDisparo()
		{
			return VelDisparo;
		}
		
		public int getDispSim()
		{
			return DispSim;
		}
		
		public Icon[] getColeccionDeImagenes()
		{
			return ColeccionDeImagenes;
		}
}
